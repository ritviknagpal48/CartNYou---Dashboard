{
  "kind": "collectionType",
  "collectionName": "product_details",
  "info": {
    "name": "ProductDetails"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "product_name": {
      "type": "string",
      "required": true
    },
    "product_category": {
      "unique": true,
      "model": "product-categories",
      "via": "product_details"
    },
    "product_main_sku": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "product_description": {
      "type": "richtext",
      "required": true
    },
    "product_brand": {
      "type": "string",
      "required": true
    },
    "counrty_origin": {
      "type": "string",
      "required": true
    },
    "product_tags": {
      "type": "string",
      "required": true
    },
    "product_status": {
      "type": "string",
      "required": true
    },
    "product_mrp": {
      "required": true,
      "type": "integer"
    },
    "product_mp": {
      "type": "integer",
      "required": true
    },
    "qunatity": {
      "type": "integer",
      "required": true
    },
    "admin_status": {
      "type": "string",
      "required": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "shipping_charge": {
      "type": "integer",
      "required": true
    },
    "shipping_time": {
      "type": "integer",
      "required": true
    },
    "weight": {
      "type": "integer",
      "required": true
    },
    "dem_length": {
      "type": "integer",
      "required": true
    },
    "dem_breadth": {
      "type": "integer",
      "required": true
    },
    "dem_height": {
      "type": "integer"
    },
    "upc_number": {
      "type": "biginteger",
      "required": true
    },
    "ean_number": {
      "type": "biginteger",
      "required": true
    },
    "hsn_code": {
      "type": "biginteger",
      "required": true
    }
  }
}
