{
  "kind": "collectionType",
  "collectionName": "product_categories",
  "info": {
    "name": "productCategories",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "categoryName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "CategoryImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "product_details": {
      "collection": "product-details",
      "via": "product_category"
    },
    "sub_categories": {
      "via": "product_category",
      "collection": "sub-category"
    },
    "commission": {
      "type": "integer",
      "default": 5,
      "min": 0
    },
    "commission_type": {
      "type": "enumeration",
      "enum": [
        "direct_value",
        "percentage"
      ],
      "default": "percentage"
    }
  }
}
